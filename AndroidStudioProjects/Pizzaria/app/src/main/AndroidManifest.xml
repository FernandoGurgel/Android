<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fucapi.br.pizzaria">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".controlado.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controlado.Cadastro_usuario"
            android:label="Novo usuario" />
        <activity
            android:name=".controlado.Principal"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controlado.Lista_Usuario"
            android:label="@string/title_activity_lista__usuario"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controlado.Lista_Cliente"
            android:label="@string/title_activity_lista__cliente"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".controlado.Cadastro_cliente" />
        <activity
            android:name=".controlado.Lista_Produto"
            android:label="@string/title_activity_lista__produto"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".controlado.Cadastro_produto" />
        <activity
            android:name=".controlado.Lista_Pedido"
            android:label="@string/title_activity_lista__pedido"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controlado.Lista_Entregador"
            android:label="@string/title_activity_lista__entregador"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controlado.Cadastro_entregador"
            android:label="@string/title_activity_cadastro_entregador"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controlado.Cadastro_pedido"
            android:label="@string/title_activity_cadastro_pedido"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
